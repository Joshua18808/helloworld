<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#12113d"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello, name, what is you favorite color?"
        android:id="@+id/textView2"
        android:textColor="#aaeedd"
        android:autoText="false"
        android:textSize="40dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="23"
        android:columnCount="7"
        android:id="@+id/Gridlayout">

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Yellow"
            android:id="@+id/button6"
            android:layout_row="2"
            android:layout_column="0"
            android:background="#ffff00"
            android:onClick="onColorClick" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="orange"
            android:id="@+id/button7"
            android:layout_row="2"
            android:layout_column="1"
            android:background="#ff8000"
            android:onClick="onColorClick" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="magenta"
            android:id="@+id/button9"
            android:layout_row="2"
            android:layout_column="3"
            android:background="#bd00ff"
            android:nestedScrollingEnabled="false"
            android:onClick="onColorClick" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Red"
            android:id="@+id/button5"
            android:layout_row="1"
            android:layout_column="0"
            android:background="#e60000"
            android:onClick="onColorClick" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Blue"
            android:id="@+id/button3"
            android:layout_row="1"
            android:layout_column="1"
            android:background="#0000ff"
            android:onClick="onColorClick" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Green"
            android:id="@+id/button10"
            android:layout_row="1"
            android:layout_column="3"
            android:background="#00cc00"
            android:onClick="onColorClick" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Black"
            android:id="@+id/button4"
            android:layout_row="8"
            android:layout_column="0"
            android:background="#000000"
            android:textColor="#aaeedd"
            android:onClick="onColorClick" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Purple"
            android:id="@+id/button8"
            android:layout_row="8"
            android:layout_column="1"
            android:background="#9c00c5"
            android:onClick="onColorClick" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="white"
            android:id="@+id/button11"
            android:layout_row="8"
            android:layout_column="3"
            android:background="#ffffff"
            android:onClick="onColorClick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:text="OK"
            android:id="@+id/button2"
            android:layout_gravity="center_horizontal"
            android:textColor="#12113d"
            android:background="#aaeedd"
            android:layout_row="21"
            android:layout_column="1" />

    </GridLayout>

</LinearLayout>